{
    "extends": "standard",
    "plugins": [
        "standard",
        "promise"
    ],
    "rules": {
        "brace-style": [2, "1tbs", {
            "allowSingleLine": false
        }],
        "curly": [2, "all"],
        "indent": [2, 4, {
            "SwitchCase": 1
        }],
        "quotes": 0,
        "semi": [2, "always"],
        "space-before-function-paren": ["error", {
            "anonymous": "never",
            "named": "never",
            "asyncArrow": "ignore"
        }]
    }
}
